            {
                "Developed and maintained client-facing applications using .NET Core and C#.",
                "Built a Funds Windows Service to automate email attachment fetching using Microsoft Graph API and SQL Server.",
                "Designed a Polling API for surveys using Node.js, Express, and MongoDB."
            }
        },
        new JobExperience
        {
            Title = "Intern",
            Company = "PMC Retail",
            Period = "Aug 2022 - Oct 2022",
            Responsibilities = new[]
