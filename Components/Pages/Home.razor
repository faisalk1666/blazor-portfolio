@page "/"
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-[#0a192f] text-[#8892b0] font-sans">
    <nav class="fixed w-full px-12 py-4 flex justify-between items-center bg-[#0a192f]/90 backdrop-blur z-50">
        <div class="text-[#64ffda] font-bold text-2xl">FK</div>
        <div class="flex space-x-8">
            <NavLink href="#about" class="hover:text-[#64ffda] transition-colors">
                About
            </NavLink>
            <NavLink href="#experience" class="hover:text-[#64ffda] transition-colors">
                Experience
            </NavLink>
            <NavLink href="#projects" class="hover:text-[#64ffda] transition-colors">
                Projects
            </NavLink>
        </div>
    </nav>

    <div class="container mx-auto px-12 pt-32">
        <!-- Hero Section -->
        <section class="min-h-screen">
            <div class="space-y-4 max-w-3xl mx-auto text-center">
                <h1 class="text-[#64ffda] font-mono">Hi, my name is</h1>
                <h2 class="text-[#ccd6f6] text-6xl font-bold">Faisal Khan.</h2>
                <h3 class="text-[#8892b0] text-5xl font-bold">I build things for the web.</h3>
                <p class="text-[#8892b0] text-lg max-w-xl mt-6 mx-auto">
                    I'm a .NET developer with over 1.5 years of experience in creating efficient, scalable, and user-friendly applications. Currently, I focus on full-stack development using modern technologies like .NET, Blazor, React, and Tailwind CSS.
                </p>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="min-h-screen py-24">
            <h2 class="text-[#ccd6f6] text-3xl font-bold mb-8 text-center">
                <span class="text-[#64ffda] font-mono">01.</span> About Me
            </h2>
            <div class="space-y-4 max-w-3xl mx-auto">
                <!-- Changed grid layout -->
                <div class="col-span-2 space-y-4 text-lg">
                    <p>
                        I'm passionate about building robust and user-centric digital solutions. My expertise lies in back-end development, API design, and crafting seamless front-end interfaces.
                    </p>
                    <p>
                        I enjoy automating workflows, enhancing performance, and constantly learning new technologies to stay updated in this dynamic industry.<br />
                        Here are some technologies I’ve been working with recently:
                    </p>
                    <div class="grid grid-cols-2 gap-4 font-mono">
                        @foreach (var tech in Technologies)
                        {
                            <div class="flex items-center space-x-2">
                                <span class="text-[#64ffda]">▹</span>
                                <span>@tech</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>


        <section id="experience" class="min-h-screen py-24">
            <h2 class="text-[#ccd6f6] text-3xl font-bold mb-8 text-center">
                <span class="text-[#64ffda] font-mono">02.</span> Experience
            </h2>
            <div class="max-w-3xl mx-auto">
                @foreach (var job in Experience)
                {
                    <div class="mb-12">
                        <div class="flex items-center space-x-4 mb-2">
                            <h3 class="text-[#ccd6f6] text-xl font-bold">@job.Title</h3>
                            <span class="text-[#64ffda]">@@ @job.Company</span>
                        </div>
                        <p class="text-sm font-mono mb-4">@job.Period</p>
                        <ul class="space-y-4">
                            @foreach (var responsibility in job.Responsibilities)
                            {
                                <li class="flex space-x-2">
                                    <span class="text-[#64ffda]">▹</span>
                                    <span>@responsibility</span>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </section>

        <section id="projects" class="min-h-screen py-24">
            <h2 class="text-[#ccd6f6] text-3xl font-bold mb-8 text-center">
                <span class="text-[#64ffda] font-mono">03.</span> Projects
            </h2>
            <div class="max-w-3xl mx-auto">
                @foreach (var project in Projects)
                {
                    <div class="mb-12">
                        <h3 class="text-[#ccd6f6] text-xl font-bold">@project.Name</h3>
                        <p class="text-lg mt-2">@project.Description</p>
                        <ul class="flex flex-wrap gap-2 mt-4">
                            @foreach (var tech in project.Technologies)
                            {
                                <li class="inline-block bg-[#233554] text-[#64ffda] px-3 py-1 rounded-full text-sm">
                                    @tech
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </section>

    </div>
</div>

@code {
    private List<string> Technologies = new()
    {
        "C#", ".NET", "Blazor", "React", "TypeScript", "Node.js", "MongoDB", "Tailwind CSS"
    };

    private List<JobExperience> Experience = new()
    {
        new JobExperience
        {
            Title = "Software Engineer",
            Company = "IDX",
            Period = "Feb 2023 - Present",
            Responsibilities = new[]
            {
                "Developed and maintained client-facing applications using .NET Core and C#.",
                "Built a Funds Windows Service to automate email attachment fetching using Microsoft Graph API and SQL Server.",
                "Designed a Polling API for surveys using Node.js, Express, and MongoDB."
            }
        }
    };

    private List<Project> Projects = new()
    {
        new Project
        {
            Name = "Funds Windows Service",
            Description = "A service to automate email attachment fetching using Microsoft Graph API and SQL Server.",
            Technologies = new[] { "C#", ".NET", "SQL Server", "Microsoft Graph API" }
        },
        new Project
        {
            Name = "Polling API",
            Description = "An API for creating and managing surveys using Node.js and MongoDB.",
            Technologies = new[] { "Node.js", "Express", "MongoDB" }
        }
    };

    public class JobExperience
    {
        public string Title { get; set; }
        public string Company { get; set; }
        public string Period { get; set; }
        public string[] Responsibilities { get; set; }
    }

    public class Project
    {
        public string Name { get; set; }
        public string Description { get; set; }
        public string[] Technologies { get; set; }
    }
}
