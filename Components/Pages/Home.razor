@page "/"
@inject NavigationManager NavigationManager

<div class="min-h-screen bg-[#0a192f] text-[#8892b0] font-sans">
    <nav class="fixed w-full px-12 py-4 flex justify-between items-center bg-[#0a192f]/90 backdrop-blur z-50">
        <div class="text-[#64ffda] font-bold text-2xl">|{ }|</div>
        <div class="flex space-x-8">
            <NavLink href="#about" class="hover:text-[#64ffda] transition-colors">
                About
            </NavLink>
            <NavLink href="#experience" class="hover:text-[#64ffda] transition-colors">
                Experience
            </NavLink>
            <NavLink href="#projects" class="hover:text-[#64ffda] transition-colors">
                Projects
            </NavLink>
        </div>
    </nav>

    <div class="container mx-auto px-12 pt-32">
        <!-- Hero Section -->
        <section class="min-h-screen flex flex-col items-center text-center">
            <h1 class="text-[#64ffda] font-mono text-lg">Hello, I am</h1>
            <h2 class="text-[#ccd6f6] text-6xl font-bold mt-4">Faisal Khan</h2>
            <h3 class="text-[#8892b0] text-5xl font-semibold mt-2">A Full-Stack Developer</h3>
            <p class="text-[#8892b0] text-lg max-w-2xl mt-6">
                I specialize in building modern, user-centric applications using .NET, Blazor, C#, and Azure. Let’s create something amazing together.
            </p>
            <a href="#projects" class="mt-8 px-6 py-3 bg-[#64ffda] text-[#0a192f] rounded-lg shadow-lg hover:scale-105 transition-transform">
                View My Work
            </a>
        </section>

        <!-- About Section -->
        <section id="about" class="min-h-screen py-24">
            <h2 class="text-[#ccd6f6] text-3xl font-bold mb-8 text-center">
                <span class="text-[#64ffda] font-mono">01.</span> About Me
            </h2>
            <div class="space-y-4 max-w-3xl mx-auto">
                <!-- Changed grid layout -->
                <div class="col-span-2 space-y-4 text-lg">
                    <p>
                        I’m a .NET developer passionate about crafting high-quality web solutions. With over 1.5 years of experience, I’ve worked on diverse projects ranging from APIs to full-stack applications.
                        Recently, I’ve been exploring front-end technologies like React and Tailwind CSS to enhance my skills.
                    </p>
                    <div class="grid grid-cols-2 gap-4 font-mono">
                        @foreach (var tech in Technologies)
                        {
                            <div class="flex items-center space-x-2">
                                <span class="text-[#64ffda]">▹</span>
                                <span>@tech</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>


        <section id="experience" class="min-h-screen py-24">
            <h2 class="text-[#ccd6f6] text-3xl font-bold mb-8 text-center">
                <span class="text-[#64ffda] font-mono">02.</span> Experience
            </h2>
            <div class="max-w-3xl mx-auto">
                @foreach (var job in Experience)
                {
                    <div class="mb-12">
                        <div class="flex items-center space-x-4 mb-2">
                            <h3 class="text-[#ccd6f6] text-xl font-bold">@job.Title</h3>
                            <span class="text-[#64ffda]">@@ @job.Company</span>
                        </div>
                        <p class="text-sm font-mono mb-4">@job.Period</p>
                        <ul class="space-y-4">
                            @foreach (var responsibility in job.Responsibilities)
                            {
                                <li class="flex space-x-2">
                                    <span class="text-[#64ffda]">▹</span>
                                    <span>@responsibility</span>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </section>

        <section id="projects" class="min-h-screen py-24">
            <h2 class="text-[#ccd6f6] text-3xl font-bold mb-8 text-center">
                <span class="text-[#64ffda] font-mono">03.</span> Projects
            </h2>
            <div class="max-w-3xl mx-auto">
                @foreach (var project in Projects)
                {
                    <div class="mb-12">
                        <h3 class="text-[#ccd6f6] text-xl font-bold">@project.Name</h3>
                        <p class="text-lg mt-2">@project.Description</p>
                        <ul class="flex flex-wrap gap-2 mt-4">
                            @foreach (var tech in project.Technologies)
                            {
                                <li class="inline-block bg-[#233554] text-[#64ffda] px-3 py-1 rounded-full text-sm">
                                    @tech
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </section>

        <section id="contacts" class="min-h-screen py-24 block sm:hidden">
            <h2 class="text-[#ccd6f6] text-3xl font-bold mb-4 text-center">
                <span class="text-[#64ffda] font-mono">04.</span> Get In Touch
            </h2>
            <p class="text-lg text-[#8892b0] max-w-2xl mx-auto mb-8 text-center">
                Have an idea or a project in mind? Let’s collaborate and create something amazing together.
            </p>
            <div class="flex justify-center">
                <a href="mailto:khanfk1666@gmail.com" class="mt-4 inline-block px-6 py-3 bg-[#64ffda] text-[#0a192f] rounded-lg shadow-lg hover:scale-105 transition-transform">
                    Say Hello
                </a>
            </div>

            <!-- Social Links -->
            <div class="mt-[5rem] flex justify-center space-x-8">
                <a href="https://www.linkedin.com/in/faisk" target="_blank" aria-label="check linkedin profile" class="text-[#64ffda] text-4xl hover:text-[#ccd6f6] transition-colors">
                    <i class="fab fa-linkedin"></i>
                </a>
                <a href="https://github.com/faisalk1666" target="_blank" aria-label="check github profile" class="text-[#64ffda] text-4xl hover:text-[#ccd6f6] transition-colors">
                    <i class="fab fa-github"></i>
                </a>
            </div>
        </section>

    </div>
</div>

